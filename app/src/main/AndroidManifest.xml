<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- USB host feature (for printer/serial dongles) -->
    <uses-feature android:name="android.hardware.usb.host" android:required="true"/>

    <application
        android:name=".KioskApp"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PudoKiosk">

        <activity
            android:name=".ui.HardwareTestActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter"/>
        </activity>

        <activity
            android:name=".ui.KioskActivity" android:exported="true" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.DevSettingsActivity"
            android:exported="false"/>

        <!-- Optional: screens -->
        <activity android:name=".ui.DevModeActivity" android:exported="false" />
        <activity android:name=".ui.SenderActivity" android:exported="false"/>
        <activity android:name=".ui.RecipientActivity" android:exported="false"/>
        <activity android:name=".ui.CourierActivity" android:exported="false"/>

        <!-- Foreground device service -->
        <service
            android:name=".service.DeviceService"
            android:exported="false"
            android:foregroundServiceType="connectedDevice|dataSync" />

        <!-- Start on boot -->
        <receiver
            android:name=".boot.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>