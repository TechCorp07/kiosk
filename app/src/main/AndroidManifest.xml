<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <uses-permission android:name="android.permission.ACCESS_SERIAL_PORT" />

    <!-- KIOSK MODE PERMISSIONS -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />

    <!-- USB host feature (for printer/serial dongles) -->
    <uses-feature android:name="android.hardware.usb.host"
        android:required="false"/>

    <application
        android:name=".ZimpudoApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZimpudoKiosk.Fullscreen">

        <!-- Main launcher activity - - TRUE KIOSK MODE -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.ZimpudoKiosk.Fullscreen">

            <!-- Primary launcher intent -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Home button intent (kiosk mode) -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Boot completed receiver -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- User present (unlock) -->
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>

            <!-- Screen on -->
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
            </intent-filter>
        </activity>

        <!-- Auto-start service for kiosk mode -->
        <service
            android:name=".service.KioskModeService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false" />

        <!-- Kiosk watchdog service -->
        <service
            android:name=".service.KioskWatchdogService"
            android:enabled="true"
            android:exported="false" />

        <receiver android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:priority="1000">

            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.SCREEN_ON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <!-- Device Admin receiver (for advanced kiosk control) -->
        <receiver
            android:name=".receiver.KioskDeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">

            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

        <!-- Onboarding Flow Activities -->
        <activity android:name=".ui.onboarding.LanguageSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk.Fullscreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName=".ui.main.MainActivity" />

        <activity android:name=".ui.onboarding.OnboardingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk.Fullscreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName=".ui.onboarding.LanguageSelectionActivity" />

        <activity android:name=".ui.onboarding.UserTypeSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk.Fullscreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName=".ui.onboarding.OnboardingActivity" />

        <!-- Authentication Activities -->
        <activity android:name=".ui.auth.SignInActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk.Fullscreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName=".ui.onboarding.UserTypeSelectionActivity" />

        <activity android:name=".ui.auth.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk.Fullscreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName=".ui.onboarding.UserTypeSelectionActivity" />

        <activity android:name=".ui.auth.OtpVerificationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.auth.PinChangeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName=".ui.auth.SignInActivity" />

        <activity android:name=".ui.auth.ForgotPinActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:parentActivityName=".ui.auth.SignInActivity" />

        <activity android:name=".ui.auth.PrivacyPolicyActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.auth.TermsConditionsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.auth.RegistrationProcessActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Main Menu Activities -->
        <activity android:name=".ui.main.CustomerMainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk.Fullscreen"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <activity android:name=".ui.main.CourierMainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk.Fullscreen"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <!-- Technician Access Activities -->
        <activity
            android:name=".ui.technician.HardwareTestActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk">

            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter"/>
        </activity>

        <activity android:name=".ui.technician.TechnicianAccessActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk"
            android:parentActivityName=".ui.main.MainActivity" />

        <activity android:name=".ui.technician.TechnicianMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZimpudoKiosk" />

        <!-- Diagnostic Activities -->
        <activity android:name=".ui.technician.SystemLogsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.technician.NetworkDiagnosticsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.technician.SystemInfoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.technician.DataManagementActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.technician.RemoteSupportActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Legacy Activities (for reference/reuse) -->
        <activity android:name=".ui.technician.DevSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>