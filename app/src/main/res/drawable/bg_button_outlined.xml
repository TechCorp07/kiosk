<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/zimpudo_primary_light" />
            <stroke android:width="2dp" android:color="@color/button_secondary_border" />
            <corners android:radius="@dimen/corner_radius_lg" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_secondary" />
            <stroke android:width="2dp" android:color="@color/button_secondary_border" />
            <corners android:radius="@dimen/corner_radius_lg" />
        </shape>
    </item>
</selector>