<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base ZIMPUDO Theme -->
    <style name="Theme.ZimpudoKiosk" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/zimpudo_primary</item>
        <item name="colorPrimaryVariant">@color/zimpudo_primary_dark</item>
        <item name="colorSecondary">@color/zimpudo_accent</item>
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:statusBarColor">@color/zimpudo_primary</item>
        <item name="android:navigationBarColor">@color/zimpudo_primary</item>
        <item name="android:windowBackground">@color/background_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_size_title_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Title.Large">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Body.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- Primary Button Style -->
    <style name="Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="Button.Secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/zimpudo_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="Button.Outlined" parent="Button.Secondary">
        <item name="android:background">@drawable/bg_button_outlined</item>
    </style>

    <!-- Small Button Style -->
    <style name="Button.Small" parent="Button.Primary">
        <item name="android:layout_height">@dimen/button_height_sm</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Large Button Style for Kiosk -->
    <style name="Button.Kiosk" parent="Button.Primary">
        <item name="android:layout_height">@dimen/kiosk_button_height</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Input Field Style -->
    <style name="EditText.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Card Styles -->
    <style name="Card.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing_md</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Card.Kiosk" parent="Card.Elevated">
        <item name="android:layout_height">@dimen/kiosk_card_height</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="TextInputLayout.Primary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border_focused</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="android:layout_marginBottom">@dimen/spacing_md</item>
    </style>

    <!-- AppBar Styles -->
    <style name="AppBar.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:background">@color/zimpudo_primary</item>
        <item name="android:elevation">@dimen/elevation_md</item>
    </style>

    <!-- Icon Styles -->
    <style name="Icon.Primary">
        <item name="android:layout_width">@dimen/icon_size_md</item>
        <item name="android:layout_height">@dimen/icon_size_md</item>
        <item name="android:tint">@color/zimpudo_primary</item>
    </style>

    <style name="Icon.Large">
        <item name="android:layout_width">@dimen/icon_size_xl</item>
        <item name="android:layout_height">@dimen/icon_size_xl</item>
    </style>

    <style name="Icon.Kiosk">
        <item name="android:layout_width">@dimen/kiosk_icon_size</item>
        <item name="android:layout_height">@dimen/kiosk_icon_size</item>
    </style>

    <!-- Divider Style -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <!-- Loading Styles -->
    <style name="Progress.Primary">
        <item name="android:layout_width">@dimen/progress_size</item>
        <item name="android:layout_height">@dimen/progress_size</item>
        <item name="android:indeterminateTint">@color/zimpudo_primary</item>
    </style>

    <style name="Progress.Large">
        <item name="android:layout_width">@dimen/progress_size_large</item>
        <item name="android:layout_height">@dimen/progress_size_large</item>
    </style>

    <style name="Progress.White">
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <!-- Alert/Dialog Styles -->
    <style name="AlertDialog.Primary" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/zimpudo_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <!-- Bottom Sheet Styles -->
    <style name="BottomSheet.Primary" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@drawable/bg_white_rounded_top</item>
    </style>

    <!-- Fab Styles -->
    <style name="Fab.Primary" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/zimpudo_primary</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_margin">@dimen/spacing_md</item>
    </style>

    <!-- Chip Styles -->
    <style name="Chip.Primary" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/zimpudo_primary_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TabLayout Styles -->
    <style name="TabLayout.Primary" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/zimpudo_primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/zimpudo_primary</item>
    </style>

    <!-- Language Selection Item Style -->
    <style name="Language.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/selector_language_item</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
