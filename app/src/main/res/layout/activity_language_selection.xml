<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary"
    android:orientation="vertical">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_xl">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@color/white" />

        <!-- ZIMPUDO Logo -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/zimpudo_logo"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Welcome Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME | MAUYA |\nSIYAKWAMUKELA"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2" />
    </LinearLayout>

    <!-- Language Selection Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/bg_white_rounded_top"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="@string/select_language" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            style="@style/Text.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xl"
            android:text="@string/language_subtitle" />

        <!-- Language List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLanguages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/spacing_xl"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/continue_button"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawablePadding="@dimen/spacing_sm" />

    </LinearLayout>

</LinearLayout>