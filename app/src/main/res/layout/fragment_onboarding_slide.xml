<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/spacing_lg">

    <!-- Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:src="@drawable/zimpudo_logo"
        android:contentDescription="@string/app_name" />

    <!-- Slide Image -->
    <ImageView
        android:id="@+id/ivSlideImage"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:scaleType="centerCrop"
        android:contentDescription="Onboarding illustration" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded_full"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:layout_marginHorizontal="@dimen/spacing_md">

        <!-- Title -->
        <TextView
            android:id="@+id/tvSlideTitle"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:textSize="20sp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSlideSubtitle"
            style="@style/Text.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>