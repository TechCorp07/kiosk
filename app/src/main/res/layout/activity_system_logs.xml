<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary"
    android:orientation="vertical">

    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="System Logs"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_md"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:gravity="center"
        android:text="Application and system diagnostic logs"
        android:textColor="@color/text_white"
        android:textSize="14sp" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_white_rounded_top"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFilterAll"
                style="@style/Button.Outlined.Small"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="All"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnFilterError"
                style="@style/Button.Outlined.Small"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="Errors"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnFilterWarning"
                style="@style/Button.Outlined.Small"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="Warnings"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnFilterInfo"
                style="@style/Button.Outlined.Small"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Info"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRefresh"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_refresh"
                android:drawablePadding="8dp"
                android:text="Refresh"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnClear"
                style="@style/Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="Clear"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnExport"
                style="@style/Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Export"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Last Updated -->
        <TextView
            android:id="@+id/tvLastUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="Last updated: --"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <!-- Logs Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_gray"
            android:padding="@dimen/spacing_md">

            <TextView
                android:id="@+id/tvLogsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Loading logs..."
                android:textColor="@color/text_primary"
                android:textSize="10sp"
                android:textIsSelectable="true" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>