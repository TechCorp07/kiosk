<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg"
            android:paddingBottom="@dimen/spacing_xl">

            <!-- Header with logout -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/zimpudo_logo"
                    android:contentDescription="@string/app_name" />

                <ImageButton
                    android:id="@+id/btnLogout"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_logout"
                    android:contentDescription="Logout"
                    app:tint="@color/white" />
            </FrameLayout>

            <!-- Welcome message -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:gravity="center"
                android:text="Welcome, Courier!"
                android:textColor="@color/text_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ready to make deliveries?"
                android:textColor="@color/text_white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Main Actions Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded_top"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <!-- Pickup Packages Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPickupPackages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kiosk_card_height"
                android:layout_marginBottom="@dimen/spacing_md"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_lg"
                app:cardElevation="@dimen/elevation_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_lg">

                    <ImageView
                        android:layout_width="@dimen/kiosk_icon_size"
                        android:layout_height="@dimen/kiosk_icon_size"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_lg"
                        android:src="@drawable/ic_pickup"
                        app:tint="@color/zimpudo_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPickupPackages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:text="Pickup Packages"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPickupDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Collect packages from this kiosk location"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/text_hint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Deliver Packages Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDeliverPackages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kiosk_card_height"
                android:layout_marginBottom="@dimen/spacing_md"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_lg"
                app:cardElevation="@dimen/elevation_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_lg">

                    <ImageView
                        android:layout_width="@dimen/kiosk_icon_size"
                        android:layout_height="@dimen/kiosk_icon_size"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_lg"
                        android:src="@drawable/ic_deliver"
                        app:tint="@color/success" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDeliverPackages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:text="Deliver Packages"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDeliverDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop off packages at this kiosk location"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/text_hint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- View Route Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewRoute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kiosk_card_height"
                android:layout_marginBottom="@dimen/spacing_md"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_lg"
                app:cardElevation="@dimen/elevation_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_lg">

                    <ImageView
                        android:layout_width="@dimen/kiosk_icon_size"
                        android:layout_height="@dimen/kiosk_icon_size"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_lg"
                        android:src="@drawable/ic_route"
                        app:tint="@color/info" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvViewRoute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:text="View My Route"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRouteDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See your assigned delivery route and schedule"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/text_hint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Update Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardUpdateStatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kiosk_card_height"
                android:layout_marginBottom="@dimen/spacing_md"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_lg"
                app:cardElevation="@dimen/elevation_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_lg">

                    <ImageView
                        android:layout_width="@dimen/kiosk_icon_size"
                        android:layout_height="@dimen/kiosk_icon_size"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_lg"
                        android:src="@drawable/ic_update"
                        app:tint="@color/warning" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUpdateStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:text="Update Status"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStatusDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update delivery status and add notes"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/text_hint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Courier Profile Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCourierProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/kiosk_card_height"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/corner_radius_lg"
                app:cardElevation="@dimen/elevation_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_lg">

                    <ImageView
                        android:layout_width="@dimen/kiosk_icon_size"
                        android:layout_height="@dimen/kiosk_icon_size"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_lg"
                        android:src="@drawable/ic_person"
                        app:tint="@color/zimpudo_secondary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCourierProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_sm"
                            android:text="My Profile"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvProfileDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage your courier profile and performance"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/text_hint" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>